<h3>ApidaeJEP - Toutes les programmations</h3>
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-info">
      <div class="table-responsive panel-body">
        <table id="programs" class="table table-striped table-bordered table-hover">
          <thead class="bg-gray-darker">
          <tr>
            <th>Titre</th>
            <th>Date</th>
            <th>Offres</th>
            <th>Structure</th>
            <th class="wd-xs"></th>
          </tr>
          </thead>
          <tbody>
          <% if @programs.any? %>
              <% @programs.each do |program| %>
                  <tr>
                    <td><%= program.label(program.id) %></td>
                    <td><span class="hidden"><%= program.created_at.to_i %></span><%= l(program.created_at, format: :notime) %></td>
                    <td><%= render_items(program.visible_items) %></td>
                    <td><%= program.structure %></td>
                    <td class="text-center">
                      <%= link_to '<i class="icon-note text-md"></i>'.html_safe, edit_moderator_program_path(program) %>
                    </td>
                  </tr>
              <% end %>
          <% else %>
              <tr>
                <td colspan="5" class="text-center">
                  Aucune programmation pour le moment.
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :body_area do %>
    <script>
        initDataTable('#programs');
    </script>
<% end %>