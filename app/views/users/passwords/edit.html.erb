<div class="block-center mt-xl wd-xl">
  <div class="panel panel-dark panel-flat">
    <div class="panel-heading text-center">
      <h4>Changer mon mot de passe</h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <p class="text-center">Veuillez saisir votre nouveau mot de passe ci-dessous.</p>
          <div class="form-group has-feedback">
            <%= f.label :password, 'Mot de passe', class: 'text-muted' %>
            <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Mot de passe' %>
            <span class="fa fa-lock form-control-feedback text-muted"></span>
          </div>
          <div class="form-group has-feedback">
            <%= f.label :password_confirmation, 'Confirmation du mot de passe', class: 'text-muted' %>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', placeholder: 'Mot de passe' %>
            <span class="fa fa-lock form-control-feedback text-muted"></span>
          </div>
          <%= f.submit 'Changer mon mot de passe', class: 'btn btn-block btn-danger mt-lg text-uppercase' %>
      <% end %>
    </div>
  </div>
</div>
