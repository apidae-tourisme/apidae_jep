<div class="col-sm-12">
  <div class="panel widget">
    <div class="row row-table row-flush">
      <div class="col-xs-3">
        <picture class="lateral-picture bg-gray-dark">
          <% if item.picture %>
              <div class="bg-center" style="background-image: url(<%= item.picture %>); height: 100%;"></div>
          <% else %>
              <div class="text-center pt-lg">
                <i class="fa fa-5x <%= item_icon(item) %>"></i>
              </div>
           <% end %>
        </picture>
      </div>
      <div class="col-xs-9 ph-xl">
        <div class="item_actions">
          <div class="btn-group">
            <button type="button" class="text-capitalize btn btn-<%= t "program_item.color.#{item.status}" %>"><%= t "program_item.status.#{item.status}" %></button>
            <button type="button" data-toggle="dropdown" class="btn dropdown-toggle btn-<%= t "program_item.color.#{item.status}" %>">
              <span class="caret"></span>
              <span class="sr-only">actions</span>
            </button>
            <ul role="menu" class="dropdown-menu">
              <li>
                <%= link_to '<em class="icon-note pr-sm"></em>Modifier'.html_safe,
                            edit_user_program_program_item_path(@program.id, item) %>
              </li>
              <li>
                <%= link_to '<em class="icon-docs pr-sm"></em>Dupliquer'.html_safe,
                            duplicate_user_program_program_item_path(@program.id, item), method: :post %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to '<em class="icon-arrow-up-circle pr-sm"></em>Déplacer vers le haut'.html_safe,
                            reorder_user_program_program_item_path(@program.id, item, direction: 'up'), method: :patch %>
              </li>
              <li>
                <%= link_to '<em class="icon-arrow-down-circle pr-sm"></em>Déplacer vers le bas'.html_safe,
                            reorder_user_program_program_item_path(@program.id, item, direction: 'down'), method: :patch %>
              </li>
              <li>
                <%= link_to '<em class="icon-share-alt pr-sm"></em>Changer de programmation'.html_safe,
                            select_user_program_program_item_path(@program.id, item), remote: true %>
              </li>
            </ul>
          </div>
        </div>
        <h3 class="mt">
          <%= item.title.blank? ? "Offre #{i}" : item.title %>
        </h3>
        <p class="pre"><%= ellipsis(item.description) %></p>
      </div>
    </div>
  </div>
</div>
