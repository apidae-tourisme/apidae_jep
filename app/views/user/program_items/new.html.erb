<div class="content-heading">
  <% if @previous_id %>
      Modifier l'offre
      <span class="label label-inverse text-normal vam ml"><%= "Réf. #{@item.reference}" %></span>
  <% else %>
      Créer une offre
  <% end %>
  <span class="label label-<%= t "program_item.color.#{@item.status}" %> text-normal vam"><%= t "program_item.status.#{@item.status}" %></span>
</div>
<%= render 'shared/forms/item_form', form_scope: :user, readonly: nil %>
<% content_for :body_area do %>
    <%= render 'shared/forms/item_form_scripts', readonly: nil,
               update_form_path: update_form_user_program_program_items_path(@program.id),
               opening_form_path: opening_user_program_program_items_path(@program.id) %>
<% end %>